<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow (아래쪽에만 그림자) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="25dp" /> <!-- 모서리를 둥글게 설정 -->
            <padding
                android:bottom="4dp" />
            <size android:height="50dp" />
            <gradient
                android:startColor="#00000000"
                android:endColor="@color/common_gray"
                android:angle="380"/> <!-- 아래쪽으로 향하는 그라데이션 그림자 -->
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="25dp" /> <!-- 모서리를 둥글게 설정 -->
        </shape>
    </item>

</layer-list>
